<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerProfile">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:elevation="4dp"
        android:id="@+id/topBar">

        <TextView
            android:id="@+id/topbartitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="30dp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/fullname"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="209dp"
        android:text="Fullname" />

    <TextView
        android:id="@+id/dispfullname"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="37dp"
        android:text="Displayfullname"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dispfullname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="203dp"
        android:text="Username" />

    <TextView
        android:id="@+id/dispusername"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="37dp"
        android:text="Displayusername"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dispusername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="196dp"
        android:text="E-mail" />

    <TextView
        android:id="@+id/dispemail"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="37dp"
        android:text="Displayemail"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/phoneNum"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dispemail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="196dp"
        android:text="Phone Number" />

    <TextView
        android:id="@+id/dispphoneNum"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNum"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="37dp"
        android:text="Displayphonenum"
        android:textSize="25dp" />

    <Button
        android:id="@+id/editprofile"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dispphoneNum"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="30dp"
        android:text="Edit Profile"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bottom_navigator"
        android:layout_below="@+id/editprofile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="92dp"
        android:text="Log out"
        android:textAlignment="center"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/purple_500"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menucustomer" />

</RelativeLayout>